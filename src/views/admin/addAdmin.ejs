<!DOCTYPE html>
<html lang="en">

<head>
  <%- include('../partials/head-links') %>
  <link rel='stylesheet' href='/css/globals.css' />
  <link rel="stylesheet" href="/css/header.css">
  <link rel="stylesheet" href="/css/footer.css">
  <link rel="stylesheet" href="/css/addAdmin.css" />
</head>

<body>
<%- include('../partials/header') %>
<%- include('../partials/menu') %>
  <main>
    <div class="container">
      <div class="row">
        <form action="/admin/registro" method="POST" class="col-md-6 col-sm-12 formulario" id ="formulario">
          <div class="card">
            <div class="card-header">
              <p>Añadir nuevo administrador</p>
            </div>
            <div class="card-body">
              <div class="form-group">
                <label for="nombre">Nombre</label>
                <input type="text" class="form-control" name="nombre" id="nombre">
              </div>
              <div class="form-group">
                <label for="usuario">Usuario</label>
                <input type="text" class="form-control" name="usuario" id="usuario">
              </div>
              <div class="form-group">
                <label for="email">Email</label>
                <input type="email" class="form-control" name="email" id="email">
              </div>
              <div class="form-group">
                <label for="password">Contraseña</label>
                <input type="password" class="form-control" name="password" id="password">
              </div>
            </div>
            <div class="card-footer">
              <button id="button-submit" type="submit" class="btn btn-success">Añadir</button>
            </div>
          </div>
        </form>
        <% if (typeof errors !== 'undefined') { %>
        <div class="col-md-6 col-sm-12 card card-errors">
          <div class="card-header">
            <p>Se han encontrado errores:</p>
          </div>
          <div class="card-body">
            <div class="bomb">
              <i class="fas fa-bomb"></i>
            </div>
            <ul class="card-errors-list">
              <% errors.forEach(error => { %>
                <li><%= capitalizeFirstLetter(error.param) + ': ' + error.msg %></li>
              <% }) %>
            </ul>
          </div>
        </div>
        <% } %>
      </div>
    </div>
  </main>
<%- include('../partials/footer') %>
<script src="/js/sweetalert2.all.min.js"></script>
<script>
  const boton = document.getElementById('button-submit').addEventListener('click', () => {
      setTimeout(() => {
        Swal.fire({
          position: 'top-end',
          icon: 'success',
          title: 'Administrador registrado!',
          showConfirmButton: false,
          timer: 1500
        })
      }, 1000);
  })
</script>
</body>
                                    
</html>
