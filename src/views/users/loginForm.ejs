<!DOCTYPE html>
<html lang="en">

  <head>
    <%- include('../partials/head-links') %>
    <link rel="stylesheet" href="/css/globals.css" />
    <link rel="stylesheet" href="/css/home.css" />
    <link rel="stylesheet" href="/css/header.css" />
    <link rel="stylesheet" href="/css/footer.css" />
    <link rel="stylesheet" href="/css/loginForm.css" />
  </head>

  <body>
    <%- include('../partials/header') %>
    <main>
      <form action="/users/processLogin" method="POST">
        <div class="form-group email">
          <label>Ingrese su email: </label>
          <input class="credentials" type="text" name="user_email" />
        </div>
        <div class="form-group  password">
          <label>Contraseña:</label>
          <input class="credentials" type="password" name="user_password" />
        </div>
        <% if (typeof errors !== "undefined") { %>
        <p style="color: red;"><%= errors[0].msg %></p>
        <%}%>
        <button class="register" type="submit">Continuar</button>
        <br>
        <p style="margin-top: 20px;">No tenés cuenta?... <a href="/registro">Registrate</a></p>
      </form>

    </main>
    <%- include('../partials/footer') %>
  </body>

</html>